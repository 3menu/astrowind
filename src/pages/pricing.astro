---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Pricing from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Premium Plans"
    title="Upgrade your Digital Menu"
    subtitle="Choose the plan that fits your business needs. Upgrade anytime during your trial."
  />

  <!-- Pricing Widget ******************* -->

  <Pricing
    title="Flexible Subscription Options"
    subtitle="All premium plans unlock full features: Unlimited items, priority support, and custom branding options."
    prices={[
      {
        title: '1 Month',
        subtitle: 'Short-term',
        price: '199k', // Bạn thay giá tiền của bạn vào đây
        period: '/mo',
        items: [
          { description: 'Full Dashboard Access' },
          { description: 'Real-time Menu Updates' },
          { description: 'Priority Support' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Choose Monthly',
          href: '#', // Link đến trang thanh toán của bạn
        },
      },
      {
        title: '3 Months',
        subtitle: 'Quarterly',
        price: '549k',
        period: '/3 mos',
        items: [
          { description: 'Save 10% vs Monthly' },
          { description: 'Full Dashboard Access' },
          { description: 'Real-time Menu Updates' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Choose Quarterly',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: '6 Months',
        subtitle: 'Semi-Annual',
        price: '999k',
        period: '/6 mos',
        items: [
          { description: 'Save 15% vs Monthly' },
          { description: 'Full Dashboard Access' },
          { description: 'Real-time Menu Updates' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Choose 6 Months',
          href: '#',
        },
      },
      {
        title: '1 Year',
        subtitle: 'Best Value',
        price: '1.8M',
        period: '/year',
        items: [
          { description: 'Save 25% vs Monthly' },
          { description: 'Full Dashboard Access' },
          { description: 'Real-time Menu Updates' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Choose Yearly',
          href: '#',
        },
      },
    ]}
  />

  <!-- FAQs Widget: Giải thích về vụ cộng dồn ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Everything you need to know about billing and trials."
    columns={1}
    items={[
      {
        title: 'What happens if I upgrade during my Free Trial?',
        description:
          "<strong>Good news!</strong> You won't lose any time. If you have remaining days on your 7-day trial and decide to buy a Premium package, those remaining days will be <strong>added</strong> to your purchased plan. <br/><br/><em>Example: You have 3 trial days left and buy a 1-Month plan. Your premium access will last for 1 Month + 3 Days.</em>",
      },
      {
        title: 'Can I switch plans later?',
        description:
          'Yes, you can upgrade to a longer-term plan at any time. The remaining value of your current plan will be credited towards the new one.',
      },
      {
        title: 'How do updates work?',
        description:
          'When you edit prices or items in the dashboard, changes appear on the customer view within 1-2 minutes. This ensures your menu loads fast for everyone.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Sales',
        href: '/contact',
      },
    ]}
    title="Need a custom solution?"
    subtitle="For enterprise chains or special requirements, contact us for a custom quote."
  />
</Layout>
