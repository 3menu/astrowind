---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing Plans"
    title="Choose your Growth Path"
    subtitle="Flexible plans for every stage of your business. Upgrade anytime to increase your capacity."
  />

  <!-- Pricing Widget ******************* -->
  <!-- columns={2} sẽ chia layout thành 2 cột, tạo thành lưới 2x2 -->
  
  <Prices
    title="Premium Packages"
    subtitle="All plans include secure hosting and 24/7 support"
    columns={2} 
    prices={[
      {
        title: 'Starter (1 Month)',
        subtitle: 'For Startups & Small Shops',
        price: 9.90,
        period: '/mo',
        items: [
          { description: 'Max 500 Products' },
          { description: 'Max 30 Categories' },
          { description: 'Quick Updates (1-2 mins)' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Buy Now',
          href: '#', 
        },
      },
      {
        title: 'Growth (3 Months)',
        subtitle: 'Save ~10%',
        price: 26.90,
        period: '/3 mos',
        items: [
          { description: 'Max 1,200 Products' },
          { description: 'Max 80 Categories' },
          { description: 'Quick Updates (1-2 mins)' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Buy Now',
          href: '#',
        },
      },
      {
        title: 'Business (6 Months)',
        subtitle: 'Save ~20%',
        price: 47.90,
        period: '/6 mos',
        items: [
          { description: 'Max 2,200 Products' },
          { description: 'Max 150 Categories' },
          { description: 'Quick Updates (1-2 mins)' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Buy Now',
          href: '#',
        },
      },
      {
        title: 'Pro / Unlimited (1 Year)',
        subtitle: 'Save ~50% (Best Value)',
        price: 59.90,
        period: '/year',
        items: [
          { description: 'Max 3,000 Products' },
          { description: 'Max 200 Categories' },
          { description: 'Priority Quick Updates' },
          { description: 'Remove FAR QR Branding' },
        ],
        callToAction: {
          target: '_blank',
          text: 'Buy Now',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Save 50% - Best Value',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Why upgrade to Premium?"
    subtitle="Unlock higher limits and professional features"
    columns={2}
    items={[
      {
        title: 'Increased Capacity',
        description: 'Store more products and categories as your business grows. The Pro plan supports up to 3,000 items.',
        icon: 'tabler:database',
      },
      {
        title: 'Accumulative Time',
        description: 'Buying a new package while another is active? The new duration is added to your remaining days. You never lose value.',
        icon: 'tabler:calendar-plus',
      },
      {
        title: 'Brand Freedom',
        description: 'All premium plans allow you to remove the "Powered by FAR QR" branding from your menu footer.',
        icon: 'tabler:brand-pnpm',
      },
      {
        title: 'Quick Sync',
        description: 'Updates to prices and items appear on customer phones within 1-2 minutes.',
        icon: 'tabler:refresh',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Simple Purchase Process"
    tagline="How it works"
    isReversed={true}
    items={[
      {
        title: 'Step 1: Log In',
        description: 'Access your dashboard. Your trial data is safe and ready.',
        icon: 'tabler:login',
      },
      {
        title: 'Step 2: Choose Plan',
        description: 'Select the package that fits your inventory size (500, 1200, 2200, or 3000 products).',
        icon: 'tabler:click',
      },
      {
        title: 'Step 3: Payment',
        description: 'Complete secure payment.',
        icon: 'tabler:credit-card',
      },
      {
        title: 'Step 4: Instant Upgrade',
        description: 'Your account limits increase and expiration date extends immediately.',
        icon: 'tabler:circle-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about our plans."
    columns={1}
    items={[
      {
        title: 'Can I switch from Starter to Pro later?',
        description:
          "Yes. Because our system is <strong>Accumulative</strong>, you simply buy the Pro package. Your account limits will increase to the Pro level immediately, and the 1 Year duration will be added to your remaining days.",
      },
      {
        title: 'Why is there a product limit?',
        description:
          'Limits ensure the system runs fast for everyone. 3,000 products (Pro Plan) is optimized for high performance while covering the needs of large restaurants.',
      },
      {
        title: 'Does "Quick Updates" mean instant?',
        description:
          'It is very fast but not instant. There is a system delay of about <strong>1-2 minutes</strong> for changes to propagate to the public QR view.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    title="Ready to scale?"
    subtitle="Start small or go unlimited today."
    actions={[
      {
        variant: 'primary',
        text: 'Go to Dashboard',
        href: 'https://app.yourwebsite.com', 
      },
    ]}
  />
</Layout>
