---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Choose your Growth Path"
    subtitle="Flexible plans for every stage of your business. Upgrade anytime."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="Only pay for what you need"
    prices={[
      {
        title: '1 month',
        subtitle: 'Budget Saver',
        price: 9.9,
        period: 'per month',
        items: [
          {
            description: 'Max 500 Products',
          },
          {
            description: 'Max 30 Categories',
          },
          {
            description: 'Bonus: 1 WiFi QR',
          },
          {
            description: 'Bonus: 1 Image QR',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: '3 months',
        subtitle: 'Save ~10%',
        price: 26.9,
        period: 'Per 3 Months',
        items: [
          {
            description: 'Max 1,200 Products',
          },
          {
            description: 'Max 80 Categories',
          },
          {
            description: 'Bonus: 1 WiFi QR',
          },
          {
            description: 'Bonus: 1 Image QR',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: '6 months',
        subtitle: 'Save ~20%',
        price: 47.9,
        period: 'Per 6 Months',
        items: [
          {
            description: 'Max 2,200 Products',
          },
          {
            description: 'Max 150 Categories',
          },
          {
            description: 'Bonus: 1 WiFi QR',
          },
          {
            description: 'Bonus: 1 Image QR',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
      },
      {
        title: '1 year',
        subtitle: 'Save 50% - Best Value',
        price: 59.9,
        period: 'Per 1 year',
        items: [
          {
            description: 'Max 3,000 Products',
          },
          {
            description: 'Max 200 Categories',
          },
          {
            description: 'Bonus: 1 WiFi QR',
          },
          {
            description: 'Bonus: 1 Image QR',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Get started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Price-related features"
    subtitle="Discover the advantages of choosing our plans"
    columns={2}
    items={[
      {
        title: 'Long-Term Savings',
        description: 'Enjoy bigger discounts with longer subscription periods. The annual plan offers the best value, saving you up to 50%.',
        icon: 'tabler:coin',
      },
      {
        title: 'Transparent Pricing',
        description: 'Clearly displayed pricing details for each plan, with no hidden costs or unexpected charges.',
        icon: 'tabler:flip-vertical',
      },
      {
        title: 'Secure Payment Methods',
        description: 'Checkout with confidence using PayPal. Your financial data is encrypted and never touches our servers.',
        icon: 'tabler:brand-paypal',
      },
      {
        title: 'Bonus: Art & WiFi QRs',
        description: `Receive 1 Free Image QR (from your logo) PLUS a convenient WiFi QR for your shop. Included with all subscription plans.`,
        icon: 'tabler:gift',
      },
      {
        title: 'Expand Limits Anytime',
        description: 'Need more space? Switch to a higher plan instantly to increase your capacity for Products and Categories.',
        icon: 'tabler:box-multiple',
      },
      {
        title: 'Accumulative Time',
        description: 'Buying a new package while another is active? The new duration is added to your remaining days. You never lose value.',
        icon: 'tabler:calendar-plus',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

   <!-- Steps Widget ****************** -->

  <Steps
    title="Simple Purchase Process"
    tagline="How it works"
    isReversed={true}
    items={[
      {
        title: 'Step 1: Log In',
        description: 'Access your dashboard. Your trial data is safe and ready.',
        icon: 'tabler:login',
      },
      {
        title: 'Step 2: Choose Plan',
        description: 'Select the package that fits your catalog size.',
        icon: 'tabler:click',
      },
      {
        title: 'Step 3: Payment',
        description: 'Complete secure payment.',
        icon: 'tabler:credit-card',
      },
      {
        title: 'Step 4: Instant Upgrade',
        description: 'Your account limits increase and expiration date extends immediately.',
        icon: 'tabler:circle-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Steps image',
    }}
  />

 <!-- FAQs Widget ******************* -->
  <FAQs
    title="Pricing FAQs"
    subtitle="Common questions about our plans."
    columns={1}
    items={[
      {
        title: 'Can I switch from the Monthly plan to the 1 Year plan later?',
        description:
          "Yes. Because our system is Accumulative, you simply buy the 1 Year package. Your account limits will increase to the maximum level immediately, and the 1 Year duration will be added to your remaining days.",
      },
      {
        title: 'How do I claim my Free Image QR?',
        description:
          'After purchasing a package, you will receive an email with a form to submit your logo and URL. Our design team will process it and send it back to you.',
      },
      {
        title: 'What is your refund policy?',
        description:
          'Due to the digital nature of the service and the available free trial, payments are non-refundable. We encourage you to test thoroughly before subscribing.',
      },
    ]}
  />
</Layout>
