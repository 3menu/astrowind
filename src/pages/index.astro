---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'FAR QR â€” Smart Menu, WiFi & Artistic QR Solutions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Start Free Trial',
        href: '#trial-form',
        icon: 'tabler:rocket',
      },
      { text: 'View Features', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'FAR QR Illustration' }}
  >
    <Fragment slot="title">
      Revolutionize your business with <span class="text-accent dark:text-white">FAR QR</span> Solutions
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Create <strong>Smart Menus</strong>, <strong>WiFi QRs</strong>, and stunning <strong>Artistic QR Codes</strong> in seconds.</span
      >
      Elevate your customer experience with contactless solutions and personalized branding.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Innovation, Aesthetics, and Seamless Connectivity." />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Services"
    title="Everything you need to go Digital"
    subtitle="FAR QR provides a comprehensive suite of tools for restaurants, startups, and professionals."
    items={[
      {
        title: 'Smart Menu & Pricelists',
        description:
          'Create dynamic menus and price lists that you can update anytime. Customers simply scan to view options.',
        icon: 'tabler:tools-kitchen-2',
      },
      {
        title: 'Instant WiFi Access',
        description:
          'No more typing long passwords. Generate a QR code that connects customers to your WiFi instantly.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Artistic & Custom QR',
        description:
          'Stand out with AI-generated artistic QR codes that incorporate your logo, colors, and unique style.',
        icon: 'tabler:palette',
      },
      {
        title: 'Personal Profiles & CV',
        description:
          'Share your bio, portfolio, or resume with a single scan. Perfect for networking and job hunting.',
        icon: 'tabler:user-circle',
      },
      {
        title: 'Real-time Analytics',
        description:
          'Track how many people scan your codes, where they are, and what devices they use.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Mobile Optimized',
        description:
          'All landing pages generated by FAR QR are 100% responsive and look great on any smartphone.',
        icon: 'tabler:device-mobile',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Smart Solutions"
    title="Digitalize your Menu & Pricelist"
    items={[
      {
        title: 'Easy to Update',
        description:
          'Change prices, add items, or hide out-of-stock products instantly without re-printing QR codes.',
      },
      {
        title: 'Contactless Experience',
        description:
          'Provide a safe and hygienic experience for your customers by eliminating physical menus.',
      },
      {
        title: 'Rich Media Support',
        description:
          'Add mouth-watering images and detailed descriptions to upsell your products.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Digital Menu Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Modernize your service</h3>
      Save printing costs and improve operational efficiency.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'One-Scan Connection',
        description: `Customers just point their camera and tap to connect. No typing errors, no frustration.`,
      },
      {
        title: 'Secure & Safe',
        description:
          'Share your internet access without revealing your actual password text on printed signs.',
      },
      {
        title: 'Custom Branding',
        description:
          "Add your shop's logo to the center of the WiFi QR code for a professional look.",
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1563013544-824ae1b704d3?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'WiFi Connect Image',
    }}
  >
    <Fragment slot="content">
        <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Hassle-free WiFi Access</h3>
        Improve customer satisfaction with the easiest way to get online.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Artistic Integration',
        description:
          'Blend your QR code seamlessly into marketing materials using Stable Diffusion AI technology.',
      },
      {
        title: 'Brand Identity',
        description:
          'Your QR code should recognize your brand. Use custom colors, shapes, and logos.',
      },
      {
        title: 'Personal Branding',
        description:
          'Create a "Link in Bio" QR code that looks like a piece of art for your business card.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1622547748225-3fc4abd2d00d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Artistic QR Image',
    }}
  >
    <Fragment slot="content">
        <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Artistic & Personalized QR</h3>
        Make your QR codes a conversation starter, not just a black and white square.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to get started with FAR QR"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Register Account</span>',
        description:
          "Sign up for an account to access our dashboard. You can start with our free trial.",
        icon: 'tabler:user-plus',
      },
      {
        title: 'Step 2: <span class="font-medium">Create & Customize</span>',
        description:
          "Choose your QR type (Menu, WiFi, URL, Profile). Enter your data and customize the design with your logo and colors.",
        icon: 'tabler:settings',
      },
      {
        title: 'Step 3: <span class="font-medium">Download & Print</span>',
        description:
          'Download your high-quality QR code (PNG, SVG) and print it on your table stands, flyers, or business cards.',
        icon: 'tabler:download',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FORM WIDGET (CUSTOM ADDED) ******************* -->
  <!-- Note: You need to connect the form action to a service like Formspree or your own backend -->
  
  <div id="trial-form" class="scroll-mt-16">
    <div class="flex flex-col max-w-6xl mx-auto px-4 sm:px-6 overflow-hidden">
        <div class="py-12 md:py-20 lg:py-24 rounded-lg bg-blue-50 dark:bg-slate-800 shadow-xl p-8">
            <div class="text-center pb-10 max-w-5xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold tracking-tighter mb-4 font-heading text-heading">
                    Start your 7-Day Free Trial
                </h2>
                <p class="text-xl text-muted dark:text-slate-400">
                    Experience all premium features. No credit card required for sign-up.
                </p>
            </div>

            <form action="#" method="POST" class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name Input -->
                <div class="col-span-1">
                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="John Doe" required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Email Input -->
                <div class="col-span-1">
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="john@example.com" required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Phone Input -->
                <div class="col-span-1">
                    <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="+1 234 567 890" required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Social Media Input -->
                <div class="col-span-1">
                    <label for="social" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Social Media Link</label>
                    <input type="url" id="social" name="social" placeholder="https://facebook.com/yourprofile"
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Submit Button -->
                <div class="col-span-1 md:col-span-2 mt-4">
                    <button type="submit" class="w-full py-4 text-white bg-primary hover:bg-blue-700 font-bold rounded-md shadow-lg transition duration-200">
                        Get My Free Account Now
                    </button>
                    <p class="text-center text-xs text-gray-500 mt-4">By signing up, you agree to our Terms and Privacy Policy.</p>
                </div>
            </form>
        </div>
    </div>
  </div>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`Explore our latest articles on how to leverage QR technology for your business growth. 
    Learn tips on menu design, WiFi marketing strategies, and personal branding.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Got questions? We've got answers."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How does the Smart Menu work?',
        description:
          "You create a menu in our dashboard. We generate a QR code. When you update prices or items in the dashboard, customers see the changes instantly upon scanning, without needing a new QR code.",
      },
      {
        title: 'Is the WiFi QR code secure?',
        description:
          'Yes. The QR code simply contains the network credentials in a format your phone understands. It connects directly to your router settings. We do not monitor your traffic.',
      },
      {
        title: 'Can I customize the QR design?',
        description:
          "Absolutely! You can change colors, add your logo to the center, or use our Artistic AI to blend the QR code into a beautiful image.",
      },
      {
        title: "What happens after the 7-day trial?",
        description:
          "You can choose to upgrade to one of our premium plans to keep using advanced features, or switch to a limited free plan.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'QR Generated', amount: '15K+' },
      { title: 'Scans/Month', amount: '2.4M' },
      { title: 'Happy Clients', amount: '3500+' },
      { title: 'Countries', amount: '20+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Sign Up Now',
        href: '#trial-form',
        icon: 'tabler:user-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to boost your business?
    </Fragment>

    <Fragment slot="subtitle">
      Join thousands of businesses using <span class="font-bold">FAR QR</span> to streamline operations and impress customers.
    </Fragment>
  </CallToAction>
</Layout>
