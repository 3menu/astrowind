---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'FAR QR â€” Digital Menu, WiFi & Artistic QR Solutions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get 7-Day Free Trial',
        href: '#trial-form',
        icon: 'tabler:rocket',
      },
      { text: 'How it works', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'FAR QR Illustration' }}
  >
    <Fragment slot="title">
      Digitize your services with <span class="text-accent dark:text-white">FAR QR</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Easily create <strong>Digital Menus</strong>, <strong>WiFi QRs</strong>, and unique <strong>Artistic QR Codes</strong>.</span
      >
      Manage your pricelists via our simple dashboard and let your customers connect instantly.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Philosophy:" description="Simplicity, Convenience, and Aesthetics." />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Services"
    title="Everything you need to go Digital"
    subtitle="FAR QR provides essential tools for shop owners, professionals, and creatives."
    items={[
      {
        title: 'Digital Menu & Pricelists',
        description:
          'A simple management dashboard allows you to input products and prices quickly. Generate a QR for customers to scan and view.',
        icon: 'tabler:list-details',
      },
      {
        title: 'Instant WiFi Access',
        description:
          'Create a QR code containing your network details. Customers scan to connect instantly without typing passwords.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Artistic & Custom QR',
        description:
          'Personalize your QR codes with your logo, colors, or artistic styles for your website, profile, or CV.',
        icon: 'tabler:palette',
      },
      {
        title: 'Easy Dashboard',
        description:
          'No coding skills needed. Our user-friendly interface makes it easy to add, edit, or delete items on your menu.',
        icon: 'tabler:layout-dashboard',
      },
      {
        title: 'Mobile Friendly',
        description:
          'The menus and profiles created with FAR QR look perfect on all mobile devices.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Scan Analytics',
        description:
          'See how many customers are scanning your QR codes to understand user engagement.',
        icon: 'tabler:chart-bar',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Management Dashboard"
    title="Create your Digital Menu / Pricelist"
    items={[
      {
        title: 'Input Data Quickly',
        description:
          'Log in to your dashboard and simply type in your item names, descriptions, and prices.',
      },
      {
        title: 'Instant Updates',
        description:
          'Need to change a price? Update it in the dashboard and customers will see the new price immediately. No need to reprint the QR.',
      },
      {
        title: 'Clean Display',
        description:
          'Your customers get a clear, easy-to-read list of your services or products right on their phones.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Digital Menu Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Simple & Effective</h3>
      Save printing costs and keep your pricing up-to-date effortlessly.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'One-Scan Connection',
        description: `Customers point their camera, tap, and connect. Eliminate the frustration of typing complex passwords.`,
      },
      {
        title: 'Secure Sharing',
        description:
          'Share internet access without verbally saying the password or displaying it on a wall poster.',
      },
      {
        title: 'Professional Look',
        description:
          "Place a WiFi QR stand on tables or reception desks for a modern customer experience.",
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1563013544-824ae1b704d3?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'WiFi Connect Image',
    }}
  >
    <Fragment slot="content">
        <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Hassle-free WiFi Access</h3>
        Improve customer satisfaction with the easiest way to get online.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent
    items={[
      {
        title: 'Branded QR Codes',
        description:
          'Add your company logo to the center of the QR code or use your brand colors.',
      },
      {
        title: 'Artistic Designs',
        description:
          'Turn boring black-and-white squares into visually appealing graphics that match your style.',
      },
      {
        title: 'Personal Profiles / CV',
        description:
          'Link your QR to a personalized bio page or CV. Perfect for business cards and networking.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1622547748225-3fc4abd2d00d?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Artistic QR Image',
    }}
  >
    <Fragment slot="content">
        <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Artistic & Personalized</h3>
        Make your QR codes part of your design identity.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to start using FAR QR"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Request Access</span>',
        description:
          "Fill out the form below with your details to request a 7-day trial account.",
        icon: 'tabler:forms',
      },
      {
        title: 'Step 2: <span class="font-medium">Receive Account</span>',
        description:
          "We will send your login credentials to your email. You can then access the FAR QR dashboard.",
        icon: 'tabler:mail',
      },
      {
        title: 'Step 3: <span class="font-medium">Create & Publish</span>',
        description:
          'Enter your menu items, set up WiFi details, or customize your QR art. Then download and print!',
        icon: 'tabler:printer',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- FORM WIDGET (CUSTOM ADDED) ******************* -->
  
  <div id="trial-form" class="scroll-mt-16">
    <div class="flex flex-col max-w-6xl mx-auto px-4 sm:px-6 overflow-hidden">
        <div class="py-12 md:py-20 lg:py-24 rounded-lg bg-blue-50 dark:bg-slate-800 shadow-xl p-8">
            <div class="text-center pb-10 max-w-5xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold tracking-tighter mb-4 font-heading text-heading">
                    Request 7-Day Free Trial
                </h2>
                <p class="text-xl text-muted dark:text-slate-400">
                    Fill in your details to receive a trial account for the FAR QR Dashboard.
                </p>
            </div>

            <form action="#" method="POST" class="max-w-3xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Name Input -->
                <div class="col-span-1">
                    <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Full Name</label>
                    <input type="text" id="name" name="name" placeholder="John Doe" required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Email Input -->
                <div class="col-span-1">
                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Email Address</label>
                    <input type="email" id="email" name="email" placeholder="john@example.com" required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Phone Input -->
                <div class="col-span-1">
                    <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Phone Number</label>
                    <input type="tel" id="phone" name="phone" placeholder="+1 234 567 890" required
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Social Media Input -->
                <div class="col-span-1">
                    <label for="social" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Social Media Link</label>
                    <input type="url" id="social" name="social" placeholder="https://facebook.com/yourprofile"
                        class="w-full px-4 py-3 rounded-md border border-gray-300 dark:border-gray-700 bg-white dark:bg-slate-900 focus:ring-primary focus:border-primary dark:text-white" />
                </div>

                <!-- Submit Button -->
                <div class="col-span-1 md:col-span-2 mt-4">
                    <button type="submit" class="w-full py-4 text-white bg-primary hover:bg-blue-700 font-bold rounded-md shadow-lg transition duration-200">
                        Get Trial Account
                    </button>
                    <p class="text-center text-xs text-gray-500 mt-4">We will contact you shortly to provide access.</p>
                </div>
            </form>
        </div>
    </div>
  </div>

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Find out more content in our Blog"
    information={`Explore our latest articles on how to leverage QR technology for your business. 
    Learn tips on menu design, WiFi strategies, and personal branding.`}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Got questions? We've got answers."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'How do I create a menu?',
        description:
          "Once you receive your account, log in to the dashboard. You can manually enter your categories (e.g., Drinks, Food) and items with their prices. The system will generate a link and a QR code for your menu.",
      },
      {
        title: 'Is the menu update automatic?',
        description:
          'The QR code remains the same. When you edit a price in the dashboard, the change appears instantly on the customer\'s phone when they scan the QR.',
      },
      {
        title: 'How does the WiFi QR work?',
        description:
          'You enter your WiFi network name (SSID) and password into our tool. We generate a secure QR code. Customers scan it to connect directly without seeing or typing the password.',
      },
      {
        title: "What is an Artistic QR?",
        description:
          "It's a QR code that incorporates design elements like your logo or specific patterns, making it look better than a standard black-and-white square while still being scannable.",
      },
    ]}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'QR Generated', amount: '15K+' },
      { title: 'Scans/Month', amount: '2.4M' },
      { title: 'Happy Users', amount: '3500+' },
      { title: 'Countries', amount: '20+' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Request Trial Now',
        href: '#trial-form',
        icon: 'tabler:user-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to simplify your business?
    </Fragment>

    <Fragment slot="subtitle">
      Join thousands of businesses using <span class="font-bold">FAR QR</span> to modernize their operations.
    </Fragment>
  </CallToAction>
</Layout>
