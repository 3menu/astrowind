---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About FAR QR"
    image={{
      src: 'https://images.unsplash.com/photo-1595079676339-1534801fafde?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Digital Menu QR Code Scanning',
    }}
  >
    <Fragment slot="title">
      Simplifying connections with <br />
      <span class="text-accent dark:text-white"> Smart Digital Menus & QR Codes</span>
    </Fragment>

    <Fragment slot="subtitle">
      FAR QR is a streamlined platform designed to help businesses worldwide create contactless Digital Menus, Pricelists, and WiFi QR codes. Operated independently to ensure affordability, speed, and direct support.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Why choose FAR QR?"
    stats={[
      { title: 'Global Reach', amount: 'World' },
      { title: 'Uptime (Cloudflare)', amount: '99.9%' },
      { title: 'Free Trial', amount: '7 Days' },
      { title: 'Setup Speed', amount: 'Instant' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our Core Services"
    subtitle="We focus on doing a few things extremely well. No bloat, just essential tools for your business."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Digital Menus',
        description:
          'Create and update your menu or pricelist instantly. No more re-printing paper menus every time prices change.',
        icon: 'tabler:menu-2',
      },
      {
        title: 'WiFi QR Codes',
        description:
          'Let your customers connect to your WiFi network with a single scan. No need to type long, complicated passwords.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Branded QR',
        description:
          'Stand out with custom QR codes featuring your logo and brand colors. Professional design delivered directly to your email.',
        icon: 'tabler:palette',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Cloudflare Powered',
        description:
          'Our infrastructure runs on Cloudflare, ensuring your menus load fast from anywhere in the world and are protected against attacks.',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'Secure Payments',
        description:
          'We use PayPal for all transactions. We never store your credit card or banking information on our servers.',
        icon: 'tabler:brand-paypal',
      },
      {
        title: 'Mobile Optimized',
        description:
          'Your digital menus and pricelists look perfect on any smartphone or tablet, providing a great experience for your customers.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Eco-Friendly',
        description:
          'Go paperless. Reduce waste and save costs on printing by switching to digital solutions.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Global Accessibility',
        description:
          'Whether you are in Vietnam, Europe, or the US, our service is optimized for global access with low latency.',
        icon: 'tabler:world',
      },
      {
        title: 'Direct Support',
        description:
          'As an individual business, I provide personal support. No chatbots, just real human assistance.',
        icon: 'tabler:user-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Business owner using tablet',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Philosophy"
    subtitle="FAR QR operates as a lean, individual business model. This allows us to keep costs low for you while maintaining high technical standards."
    items={[
      {
        title: 'Simplicity First',
        description:
          'We believe technology should be easy. You don\'t need to be a developer to create a digital menu.',
      },
      {
        title: 'Transparency',
        description:
          'No hidden fees. A clear 7-day free trial. You know exactly what you are paying for.',
      },
      {
        title: 'Reliability',
        description:
          'By leveraging enterprise-grade infrastructure like Cloudflare, we ensure your business stays online.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Commitment to Quality"
    subtitle="Even as an individual business, we adhere to global standards for privacy and performance."
    isReversed={true}
    callToAction={{
      text: 'Contact Us',
      href: '/contact',
    }}
    items={[
      {
        title: 'Global Compliance',
        description: 'We respect user privacy and adhere to basic principles of data protection.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Customer Satisfaction',
        description:
          'Since we do not offer refunds after the trial, we work hard to ensure the free trial proves our value first.',
        icon: 'tabler:thumb-up',
      },
      {
        title: 'Continuous Updates',
        description:
          'The platform is constantly monitored and updated to ensure security and compatibility with new devices.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Location"
    tagline="Based in Vietnam, Serving the World"
    columns={1}
    items={[
      {
        title: 'Headquarters',
        description: 'Ho Chi Minh City, Vietnam. Operating globally via the Cloud.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Support Channels"
    tagline="Need Help?"
    columns={2}
    items={[
      {
        title: 'Social Support',
        description:
          'Chat with us via Facebook Messenger for quick questions.',
        icon: 'tabler:brand-facebook',
      },
      {
        title: 'Email Support',
        description:
          'Send us an email at farqr.com@gmail.com. We respond within 24-48 business hours.',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
