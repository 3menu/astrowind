---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About FAR QR"
    image={{
      src: 'https://images.unsplash.com/photo-1595079676339-1534801fafde?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80',
      alt: 'Digital Menu QR Code Scanning',
    }}
  >
    <Fragment slot="title">
      Simplifying connections with <br />
      <span class="text-accent dark:text-white"> Smart Digital Menus & QR Codes</span>
    </Fragment>

    <Fragment slot="subtitle">
      FAR QR is an independent platform designed to provide practical, aesthetic, and accessible solutions for businesses everywhere. It enables the creation of contactless Digital Menus, Pricelists, and WiFi QR codes with ease and speed.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Why choose FAR QR?"
    stats={[
      { title: 'Availability', amount: 'Worldwide' },
      { title: 'Uptime (Cloudflare)', amount: '99.9%' },
      { title: 'Free Trial', amount: '7 Days' },
      { title: 'Setup Speed', amount: 'Instant' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Core Services"
    subtitle="Focused on essential tools to help business operate smoothly without unnecessary complexity."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Digital Menus',
        description:
          'Create and update menus or pricelists instantly. Eliminate the cost of re-printing paper menus whenever prices change.',
        icon: 'tabler:menu-2',
      },
      {
        title: 'Free WiFi QR',
        description:
          'Generate a WiFi QR code for free. Simply input the network details, and the QR code is emailed directly to youâ€”ready for customers to scan and connect.',
        icon: 'tabler:wifi',
      },
      {
        title: 'Branded QR',
        description:
          'Upload a logo/URL and pay securely to receive a custom Branded QR code. The professional design is generated and delivered directly via email.',
        icon: 'tabler:palette',
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'Cloudflare Powered',
        description:
          'The infrastructure runs on Cloudflare, ensuring menus load fast for users anywhere in the world while being protected against attacks.',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'Secure Payments',
        description:
          'PayPal is used for all transactions. As a privacy-focused platform, credit card or banking information is never stored on FAR QR servers.',
        icon: 'tabler:brand-paypal',
      },
      {
        title: 'Mobile Optimized',
        description:
          'Digital menus and pricelists are designed to look perfect on any smartphone or tablet, ensuring a smooth experience for guests.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Eco-Friendly',
        description:
          'Go paperless. Reduce waste and save operational costs on printing by switching to digital solutions.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Accessible Everywhere',
        description:
          'Whether in Vietnam, Europe, or the Americas, FAR QR is optimized for worldwide access via the cloud.',
        icon: 'tabler:world',
      },
      {
        title: 'Personal Support',
        description:
          'Operated by an independent developer, FAR QR offers direct human assistance without the frustration of automated chatbots.',
        icon: 'tabler:user-check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?ixlib=rb-4.0.3&auto=format&fit=crop&w=1740&q=80',
      alt: 'Business owner using tablet',
    }}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Philosophy"
    subtitle="Practical, Aesthetic, and Accessible Solutions."
    items={[
      {
        title: 'Practicality',
        description:
          'Tools are built to solve real problems. No need to be a developer to create a digital menu; it just works.',
      },
      {
        title: 'Aesthetics',
        description:
          'Presentation matters. FAR QR ensures digital menus and branded QR codes look professional and clean.',
      },
      {
        title: 'Accessibility',
        description:
          'High-quality tech shouldn\'t be expensive or complicated. The platform offers transparent pricing (with a clear 7-day free trial) and an easy-to-use interface.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Commitment to Quality"
    subtitle="FAR QR operates as a lean, independent business while adhering to high technical standards."
    isReversed={true}
    callToAction={{
      text: 'Contact Us',
      href: '/contact',
    }}
    items={[
      {
        title: 'Data Privacy',
        description: 'User privacy is respected, adhering to essential data protection principles. Only necessary data is collected to run the service.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Value First',
        description:
          'Proving value before payment is a core principle. A full-featured trial is available so the system can be tested thoroughly.',
        icon: 'tabler:thumb-up',
      },
      {
        title: 'Agile Updates',
        description:
          'Being independently run allows for quick updates and maintenance to ensure security and compatibility with new devices.',
        icon: 'tabler:refresh',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Origin & Operation"
    tagline="Independently Developed"
    columns={1}
    items={[
      {
        title: 'Based in Vietnam',
        description: 'Developed in Ho Chi Minh City, serving users worldwide via the Cloud.',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Support Channels"
    tagline="Need Assistance?"
    columns={2}
    items={[
      {
        title: 'Messenger Support',
        description:
          'Chat directly for quick questions via Facebook Messenger.',
        icon: 'tabler:brand-facebook',
      },
      {
        title: 'Email Support',
        description:
          'Contact support at farqr.com@gmail.com. Responses are typically sent within 24-48 hours.',
        icon: 'tabler:mail',
      },
    ]}
  />
</Layout>
